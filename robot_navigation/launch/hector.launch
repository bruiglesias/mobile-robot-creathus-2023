<?xml version="1.0"?>
<launch>

	<node name="hector" pkg="hector_mapping" type="hector_mapping" output="screen">
		<param name="scan_topic" value="front_scan" />
	    <param name="base_frame" value="base_link" />
	    <param name="odom_frame" value="imu_link" />
	    <param name="map_frame" value="map" />

	    <param name="pub_map_odom_transform" value="true" />
	    <param name="use_tf_scan_transformation" value="true"/>
	    <param name="map_pub_period" value="2.0"/> <!-- 0.5 -->


        <param name="update_factor_free" value="0.40"/> <!-- 0.45 -->
        <param name="update_factor_occupied" value="0.9"/>
        <param name="map_update_distance_thresh" value="0.9"/>

        <param name="laser_z_min_value" value="-1.0"/>
        <param name="laser_z_max_value" value="1.0"/>
	</node>

</launch>
