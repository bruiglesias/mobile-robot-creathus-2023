            </horizontal>
            </scan>
            <range>
            <min>0.10</min>
            <max>25</max>
            <resolution>0.01</resolution>
            </range>
            <noise> 
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
            </noise>
        </ray>
        <plugin name="gazebo_ros_head_lidar_controller" filename="libgazebo_ros_laser.so">
            <topicName>/back_scan</topicName>
            <frameName>back_laser_link</frameName>
        </plugin>
        </sensor>
    </gazebo>

</robot>